@model List<Product>

@{
    ViewData["Title"] = "Products";
}

<div class="products-box">
    @if (!Model.Any())
    {
        <h1>The shop is currently empty. Come back later!</h1>
    }
    else
    {
        @foreach (var product in Model)
        {
            <div class="product" data-id="@product.Id">
                <img src="https://thumbs.dreamstime.com/z/sample-stamp-white-background-sign-90532936.jpg" alt="">

                <div class="info" >
                    <div class="name">
                        <h3>@product.Name</h3>
                    </div>

                    @if (product.Stock > 0)
                    {
                        <span class="in-stock">In stock (@product.Stock)</span>
                    }
                    else
                    {
                        <span class="out-of-stock">Out of stock</span>
                    }
                    <br>
                    <span class="price">$@product.Price</span>
                    <button class="btn-view float-right" onclick="location.href='@Url.Action("ShowProduct", "Product", new {name = product.Name})'">View</button>
                </div>
            </div>
        }
    }
</div>
